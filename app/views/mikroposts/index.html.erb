<h1>Listing mikroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mikroposts.each do |mikropost| %>
      <tr>
        <td><%= mikropost.content %></td>
        <td><%= mikropost.user_id %></td>
        <td><%= link_to 'Show', mikropost %></td>
        <td><%= link_to 'Edit', edit_mikropost_path(mikropost) %></td>
        <td><%= link_to 'Destroy', mikropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

